<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragment.Profile.EditProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonstyle2"
            android:elevation="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/linear"
            android:layout_marginTop="26dp"
            android:text="Modifier le Profile"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom et prénom"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:hint="Nom et prénom"
        android:fontFamily="@font/poppins"
        android:textColorHint="#939393"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:inputType="textPersonName"
        android:elevation="5dp"
        android:background="@drawable/edit_text_1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numéro de télephone"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:hint="Numéro de télephone"
        android:fontFamily="@font/poppins"
        android:textColorHint="#939393"
        android:gravity="center_vertical"
        android:elevation="5dp"
        android:inputType="phone"
        android:paddingHorizontal="20dp"
        android:background="@drawable/edit_text_1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wilaya"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/wilaya"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:hint="Wilaya"
        android:fontFamily="@font/poppins"
        android:textColorHint="#939393"
        android:gravity="center_vertical"
        android:elevation="5dp"
        android:drawableEnd="@drawable/vector"
        android:paddingHorizontal="20dp"
        android:background="@drawable/edit_text_1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adress"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:hint="Adresse"
        android:fontFamily="@font/poppins"
        android:textColorHint="#939393"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:inputType="textPersonName"
        android:elevation="5dp"
        android:background="@drawable/edit_text_1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_started"
        android:layout_width="match_parent"
        android:layout_marginTop="37dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginBottom="30dp"
        android:text="Modifier"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/buttonstyle1"/>

</LinearLayout>