<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignIn">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue Ã  nouveau !\nConnectez-vous"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="45dp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#939393"
        android:text="Vous pouvez connecter avec votre \nemail et mot de passe"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="30dp"
        android:lineSpacingExtra="10dp"
        android:textSize="18sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:hint="Email"
        android:fontFamily="@font/poppins"
        android:textColorHint="#939393"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:inputType="textEmailAddress"
        android:elevation="5dp"
        android:background="@drawable/edit_text_1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mot de passe"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:hint="Mot de passe"
        android:fontFamily="@font/poppins"
        android:textColorHint="#939393"
        android:gravity="center_vertical"
        android:elevation="5dp"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:background="@drawable/edit_text_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@id/login"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous n'avez pas un compte ?"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="inscrivez-vous"
                android:textColor="#BCFFA0"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="90dp"
            android:layout_marginBottom="50dp"
            android:text="Commencer"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/buttonstyle1"/>
    </RelativeLayout>
</LinearLayout>